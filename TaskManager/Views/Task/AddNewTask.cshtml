@model TaskManager.Models.ViewModels.TaskViewModel

@{
    ViewBag.Title = "Add New Task";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">@ViewBag.Title</h1>
</div>

@using (Html.BeginForm("AddNewTask", "Task", FormMethod.Post))
{
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label for="Name">Name</label>
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
        <span asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <label for="Priority">Priority</label>
        @Html.TextBoxFor(m => m.Priority, new { @class = "form-control" })
        <span asp-validation-for="Priority"></span>
    </div>

    <div class="form-group">
        <label for="Projects">Projects</label>
        @Html.DropDownList("Projects", new SelectList(Model.Projects), new {@class="form-control form-select"})
    </div>

    <button type="submit" class="btn btn-primary save-button">Submit</button>
}
