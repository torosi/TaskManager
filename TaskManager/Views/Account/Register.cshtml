@model TaskManager.Models.ViewModel.RegisterViewModel
@{
    Layout = "_Layout-Login";
    ViewData["Title"] = "Register";
}

        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class="form-signin"}))
        {
            <h1 class="h3 mb-3 font-weight-normal">Register</h1>

            <div class="form-label-group">
                <label asp-for="Email" class="sr-only"></label>
                <input asp-for="Email" class="form-control" placeholder="Email"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            
            <div class="form-label-group">
                <label asp-for="Password" class="sr-only"></label>
                <input asp-for="Password" class="form-control" placeholder="Password"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-label-group">
                <label asp-for="ConfirmPassword" class="sr-only"></label>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password"/>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-lg btn-primary btn-block">Register</button>

            <div class="mt-3 mb-3 text-muted text-center">
                <p>Already have an Account? @Html.ActionLink("Sign In", "Login", "Account")</p>
            </div>
        }