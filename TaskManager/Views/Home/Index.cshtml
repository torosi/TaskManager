@model TaskManager.Models.ViewModels.DashboardViewModel;

@{
    ViewBag.Title = "Dashboard";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-2">
    <h5 class="text-muted">@ViewBag.Title</h5>
</div>

<div class="row">
    <div class="col-5">
        <div class="row mb-4 container-half-height">
            <div class="col-6">
                <div class="card shadow-sm border-0 card-full-height">
                    <div class="card-body ">
                        <div class="row">
                            <div class="col-4 d-flex justify-content-center flex-column">
                                <p class="card-subtitle text-muted pb-4">Tasks</p>
                                <h3 class="text-secondary">@ViewBag.Tasks</h3>
                            </div>
                            <div class="col-8 d-flex justify-content-start align-items-end flex-column">
                                <a class="text-primary" asp-controller="Task" asp-action="MyTasks">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-file-text"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path><polyline points="14 2 14 8 20 8"></polyline><line x1="16" y1="13" x2="8" y2="13"></line><line x1="16" y1="17" x2="8" y2="17"></line><polyline points="10 9 9 9 8 9"></polyline></svg>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="card shadow-sm border-0 card-full-height">
                    <div class="card-body ">
                        <div class="row">
                            <div class="col-4 d-flex justify-content-center flex-column">
                                <p class="card-subtitle text-muted pb-4">Projects</p>
                                <h3 class="text-secondary">@ViewBag.Projects</h3>
                            </div>
                            <div class="col-8 d-flex justify-content-start align-items-end flex-column">
                                <a class="text-primary" asp-controller="Project" asp-action="Index">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-list-task" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd" d="M2 2.5a.5.5 0 0 0-.5.5v1a.5.5 0 0 0 .5.5h1a.5.5 0 0 0 .5-.5V3a.5.5 0 0 0-.5-.5H2zM3 3H2v1h1V3z"/>
                                        <path d="M5 3.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zM5.5 7a.5.5 0 0 0 0 1h9a.5.5 0 0 0 0-1h-9zm0 4a.5.5 0 0 0 0 1h9a.5.5 0 0 0 0-1h-9z"/>
                                        <path fill-rule="evenodd" d="M1.5 7a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5H2a.5.5 0 0 1-.5-.5V7zM2 7h1v1H2V7zm0 3.5a.5.5 0 0 0-.5.5v1a.5.5 0 0 0 .5.5h1a.5.5 0 0 0 .5-.5v-1a.5.5 0 0 0-.5-.5H2zm1 .5H2v1h1v-1z"/>
                                    </svg>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row container-half-height">
            <div class="col-6">
                <div class="card shadow-sm border-0 card-full-height">
                    <div class="card-body ">
                        <div class="row">
                            <div class="col-4 d-flex justify-content-center flex-column">
                                <p class="card-subtitle text-muted pb-4">Title 3</p>
                                <h3 class="text-secondary">123</h3>
                            </div>
                            <div class="col-8 d-flex justify-content-end flex-column"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="card shadow-sm border-0 card-full-height">
                    <div class="card-body ">
                        <div class="row">
                            <div class="col-4 d-flex justify-content-center flex-column">
                                <p class="card-subtitle text-muted pb-4">Title 4</p>
                                <h3 class="text-secondary">123</h3>
                            </div>
                            <div class="col-8 d-flex justify-content-end flex-column"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-7">
        <div class="card shadow-sm border-0 card-full-height">
            <div class="card-body ">
                <div class="row">
                    <div class="col-12 d-flex justify-content-center flex-column">
                        <p class="card-subtitle text-muted pb-4">Last 12 Months</p>
                        <canvas id="taskChart"></canvas>
                    </div>
                    <div class="col-8 d-flex justify-content-end flex-column"></div>
                </div>
            </div>
        </div>
    </div>
</div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.0/chart.min.js"></script>
    <script src="~/js/dashboard.js"></script>

    <script>
        var myArray = [];

        @foreach (var t in Model.Tasks)
        {
            @:myArray.push("@t");
        }

        CreateTaskChart(myArray);
    </script>

